{
  "manifest_version": 3,
  "name": "Flow Criativos",
  "version": "2.0.0",
  "description": "Automação de criativos em batch no Google Flow. Gera múltiplos vídeos com lipsync a partir de avatares e frases.",
  "permissions": [
    "scripting",
    "storage",
    "downloads",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://labs.google/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://labs.google/fx/tools/flow*"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "icons/*"],
      "matches": ["https://labs.google/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
